<% layout('layout') -%>

<div class="container">
    <div class="card mt-5" style="width: 100%; border: none;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="<%= product.image %>" class="card-img" alt="..." style="border: 1px solid rgba(0,0,0,.125);">
                <div class="d-flex mt-4" style="width: 30%; height: 3rem;">
                    <img src="<%= product.image %>" class="card-img" alt="..." style="border: 1px solid rgba(0,0,0,.125);">
                    <img src="<%= product.image %>" class="card-img ml-1" alt="..." style="border: 1px solid rgba(0,0,0,.125);">
                    <img src="<%= product.image %>" class="card-img ml-1" alt="..." style="border: 1px solid rgba(0,0,0,.125);">
                </div>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= product.name %></h5>
                    <p class="card-text"><%= product.price %> <em>kr</em></p>

                    <form action="" method="post">
                        <div class="btn-group" role="group" aria-label="Basic button group">
                            <input type="hidden" name="quantity" id="quantity" value="1">
                            <button type="button" id="minus" class="btn btn-light">-</button>
                            <button type="button" id="total" class="btn btn-light">1</button>
                            <button type="button" id="plus" class="btn btn-light">+</button>
                        </div>

                        <div class="form-group">
                            <input type="hidden" name="product_id" id="product_id" value="<%= product._id %>">
                            <input type="hidden" name="priceHidden" id="priceHidden" value="<%= product.price %>">

                            <input type="text" name="item" class="form-control" value="<%= product.name %>">
                            <input type="text" name="priceValue" class="form-control" value="<%= product.price %> kr">
                        </div>

                        <% if(user) { %>
                            <button type="submit" class="btn btn-success mb-3">LÃ¤gg till i kundvagn</button>
                        <% } else { %>
                            <a href="/signup" class="btn btn-danger">Bli Medlem</a>
                        <% } %>
                    </form>

                    <div class="divi"></div>
                    <p class="card-text my-3 d-flex justify-content-between"><em>Betalning: </em><i class="far fa-credit-card"></i></p>
                </div>
            </div>
        </div>
    </div>
</div>