<% layout('layout') -%>

<aside style="margin-top: 3rem;">
    <ul class='menu'>
        <li><a href="#" class="list-item active">Populära</a>
            <ul class='menu sub-menu'>
                <% for(let i = 0; i < categories.length; i++) { %>
                <li><a class="list-item" href="/products/<%= categories[i]._id %>" class="list-item"><%= categories[i].name %></a></li>
                <% } %>
            </ul>
        </li>
        <li>
            <a href="#" class="list-item">Dam</a>
            <ul class='menu sub-menu'>
                <li><a href="#" class="list-item">Klänningar</a></li>
                <li><a href="#" class="list-item">Vintage</a></li>
                <li><a href="#" class="list-item">Övrig</a></li>
            </ul>
        </li>
        <li>
            <a href="#" class="list-item">Herr</a>
            <ul class='menu sub-menu'>
                <li><a href="#" class="list-item">Skjortor</a></li>
                <li><a href="#" class="list-item">Vintage</a></li>
                <li><a href="#" class="list-item">Övrig</a></li>
            </ul>
        </li>
    </ul>
</aside>

<div class="container">
    <div class="row mt-5">
        <% for(let i = 0; i < products.length; i++) { %>
        <div class="col-md-4">
            <a href="/product/<%= products[i]._id %>">
                <div class="card mb-4 shadow-sm">
                    <img src="<%= products[i].image %>" class="card-img-top" alt="thumbnail img">
                    <div class="card-body">
                        <h5 class="card-title"><%= products[i].name %></h5>
                        <p class="card-text"><%= products[i].category.name %></p>
                        <p class="card-text"><%= products[i].price %> <em>kr</em></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="#" class="btn btn-success">Köp</a>
                            <small class='text-muted'><i class="fas fa-eye"></i><em>32</em></small>
                        </div>
                    </div>
                </div>
            </a>
        </div> <!-- end col-md-3 -->
        <% } %>

        <ul class="pagination text-center">
            <li class="page-item">
                <a class="page-link" href="" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            <li class="page-item">
                <% for(let i = 1; i <= pages; i++) { %>
                    <% if(i === 1) { %>
                        <li><a class="page-link" href="/"><%= i %></a></li>
                    <% }else { %>
                        <li><a class="page-link" href="/page/<%= i %>"><%= i %></a></li>
                    <% } %>
                <% } %>
            </li>

            <li class="page-item">
                <a class="page-link" href="" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </div> <!-- end row -->
</div>