<% layout('layout') -%>

<div class="container">
    <div class="row mt-5 mx-0">
        <div class="col-lg-6">
            <% if(message.length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <%= message %>
                </div>
            <% } %>

            <% for(let i = 0; i < foundCart.items.length; i++) { %>
                <ul class="list-group list-group-horizontal-lg my-3">
                    <li class="list-group-item w-100">
                        <img src="<%= foundCart.items[i].item.image %>" alt="" class="product-image">
                    </li>

                    <li class="list-group-item w-100">
                        <%= foundCart.items[i].item.name %>
                    </li>

                    <li class="list-group-item w-100">
                        <p></p><%= foundCart.items[i].quantity %> <span><em> st</em></span></p>
                        <p></p><%= foundCart.items[i].price %> <span><em> kr</em></span></p>
                        <form action="/remove" method="post">
                            <input type="hidden" name="item" value="<%= foundCart.items[i]._id %>">
                            <input type="hidden" name="price" value="<%= foundCart.items[i].price %>">
                            <button type="submit" class="btn btn-danger">Ta bort</button>
                        </form>
                    </li>
                </ul> <!-- end .list.group -->
            <% } %>
        </div>  <!-- end col-lg-6 -->

        <div class="col-md-3"></div>
        <div class="col-md-3">
            <div class="list-group">
                <span class="list-group item">
                    <h4>Summa: <span class="totalPrice"><%= foundCart.total %></span> <em>kr</em></h4>

                    <div class="form-group">
                        <input type="hidden" value="<%= foundCart.total %>">
                        <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#myModal">Betala</button>
                    </div>
                </span>
            </div>
        </div>

        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="myModalLabel">Betala</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <!-- Credit card form -->
                        <div class="container">
                            <div class="row mx-0">
                                <div class="col-xs-12">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title">Payment Details<img class="pull-right"
                                                    src="http://i76.imgup.net/accepted_c22e0.png"></h3>
                                        </div>
                                        <div class="panel-body">
                                            <form role="form" id="payment-form" action="/payment" method="POST">
                                                <input type="hidden" name="stripeMoney" value="<%= foundCart.total %>">
                                                <div class="row mx-0">
                                                    <div class="col-xs-12 w-100">
                                                        <div class="form-group w-100">
                                                            <label for="cardNumber">CARD NUMBER</label>
                                                            <div class="input-group">
                                                                <input type="text" class="form-control" name="cardNumber"
                                                                    placeholder="Valid Card Number" required autofocus data-stripe="number" />
                                                                <span class="input-group-addon"><i class="fa fa-credit-card"></i></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mx-0">
                                                    <div class="col-xs-7 col-md-7 px-0">
                                                        <div class="form-group w-100">
                                                            <label for="expMonth">EXPIRATION DATE</label>
                                                            <div class="col-xs-6 col-lg-6 pl-ziro px-0">
                                                                <input type="text" class="form-control" name="expMonth" placeholder="MM"
                                                                    required data-stripe="exp_month" />
                                                            </div>
                                                            <div class="col-xs-6 col-lg-6 pl-ziro px-0">
                                                                <input type="text" class="form-control" name="expYear" placeholder="YY" required
                                                                    data-stripe="exp_year" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-5 col-md-5 pull-right">
                                                        <div class="form-group w-100">
                                                            <label for="cvCode">CV CODE</label>
                                                            <input type="password" class="form-control" name="cvCode" placeholder="CV" required
                                                                data-stripe="cvc" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mx-0">
                                                    <div class="col-xs-12 w-100">
                                                        <button class="btn btn-success btn-lg btn-block" type="submit">Betala: SEK
                                                            <%= foundCart.total %></button>
                                                    </div>
                                                </div>
                                                <div class="row mx-0" style="display:none;">
                                                    <div class="col-xs-12 w-100">
                                                        <p class="payment-errors"></p>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- end .modal-body -->
                </div> <!-- end .modal-content -->
            </div>  <!-- end .modal-dialog -->
        </div> <!-- end .modal fade -->

    </div>  <!-- end row -->
</div>