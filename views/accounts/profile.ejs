<% layout('layout') -%>

<main role="main">
    <div class="container">
        <div class="row mx-0">
            <div class="col-md-6">
                <div class="media mt-5">
                    <img src="<%= user.profile.picture %>" class="align-self-start mr-3 rounded-circle" alt="avatar">
                    <div class="media-body">
                        <h5 class="mt-0">Namn: <%= user.profile.name %></h5>
                        <p>E-post: <%= user.email %></p>

                        <% if(user.address === '' || typeof user.address === 'undefined') { %>
                        <p>Adress: <span class="text-danger font-weight-bold">Ingen address</span></p>
                        <% }else { %>
                        <p>Adress: <%= user.address %></p>
                        <% } %>

                        <a href="/edit-profile" class="btn btn-lg btn-success">Redigera</a>
                    </div>
                </div>
            </div>  <!-- end col-md-6 -->

            <div class="col-md-6 mt-5">
                <h2>History</h2>
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Item #</th>
                                <th>Paid</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i = 0; i < user.history.length; i++){ %>
                            <tr>
                                <td><%= user.history[i].item.name %></td>
                                <td><%= user.history[i].paid %></td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div> <!-- end col-md-6 -->
        </div>  <!-- end row -->
    </div>  <!-- end container -->
</main>